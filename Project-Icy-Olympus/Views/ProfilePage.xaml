<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_Icy_Olympus.Views.ProfilePage"
             Title="ProfilePage">
    <VerticalStackLayout>
        <Image Source="https://static.toiimg.com/photo/58895424.cms" Aspect="AspectFill" HeightRequest="630" />
        <Frame HasShadow="False" CornerRadius="40" Margin="0,-200,0,0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*,*">
                <!-- TODO: GET THIS DATA FROM GOOGLE FIRESTORE -->
                <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="FIRSTNAME LASTNAME" FontSize="25" FontAttributes="Bold" Padding="20,10,0,0" />
                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="EMAIL@ADDRESS.COM" TextColor="Silver" Padding="20,10,0,0" />
                <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1" Text="AGE" TextColor="Silver" Padding="20,10,0,0" />
                
                <!-- IMPLEMENT WAY TO UPDATE GOOGLE FIRESTORE USER DB -->
                <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Text="EDIT PROFILE" FontAttributes="Bold" Padding="5" />
            </Grid>
        </Frame>
    </VerticalStackLayout>
</ContentPage>